<launch>

    <!-- Set use_sim_time parameter -->
    <param name="use_sim_time" value="true"/>

    <!-- Static transform publisher (adicionar a distancia entre o laser e o centro do robo) -->
    <node pkg="tf" type="static_transform_publisher" name="static_transform_publisher" args="0 0 0 0 0 0 1 /base_link laser 100"/>

    <!-- RViz -->
    <node pkg="rviz" type="rviz" name="rviz" args="-d $(find ist-meic-saut-g31)/launch/gmapping.rviz"/>

    <!-- Play rosbag -->
    <node pkg="rosbag" type="play" name="rosbag_player" args="$(find ist-meic-saut-g31)/data/2024-04-30-20-46-52.bag --clock"/>

    <!-- Gmapping -->
    <node pkg="gmapping" type="slam_gmapping" name="slam_gmapping">
        <param name="map_update_interval" value="0.2"/>
        <param name="xmin" value="-5.0"/>
        <param name="ymin" value="-7.0"/>
        <param name="xmax" value="7.0"/>
        <param name="ymax" value="5.0"/>
    </node>

    <!-- Map server -->
    <node pkg="map_server" type="map_saver" name="map_saver"/>

</launch>
